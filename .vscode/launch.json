    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "log" : true,
            "stopOnEntry": false,
            "ignore":[
                "**/vendor/**/*.php"
            ],
            "pathMappings": {
                "/var/www/localhost/htdocs/openemr": "/home/daniel/Documentos/dev/openemr"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        }
    ]
}